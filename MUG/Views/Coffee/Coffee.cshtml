@model IEnumerable<MUG.Models.Products>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="product-tab -style-2" style="margin-top: 40px">
    <div class="container">
        <div class="product-tab__header">
            <h5>Coffee</h5>
        </div>
        <div class="product-tab__content">
            <div class="product-tab__content__wrapper">
                <div class="row mx-n1 mx-md-n3">

                    @foreach (var coffee in Model) {

                        <div class="col-6 col-md-3 px-1 px-md-3">
                            <div class="product " id="@coffee.productName">
                                <div class="product-type"></div>
                                <div class="product-thumb">
                                    <a class="product-thumb__image" href="/shop/product-detail.html">
                                        <img src="data:image/jpg;base64,@(Convert.ToBase64String(coffee.productImage))">
                                    </a>
                                    <div class="product-thumb__actions">
                                        <div class="product-btn">
                                            <a asp-controller="Details" asp-action="Details" asp-route-id="@coffee.id" style="text-decoration-color: #111111">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="product-content">
                                    <a class="product-name" asp-controller="Details" asp-action="Details" asp-route-id="@coffee.id">@coffee.productName</a>
                                    <div class="product-content__footer">
                                        <h5 class="product-price--main">Price:  @coffee.cost  BYN</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/assets/js/jquery-3.5.1.min.js"></script>
<script src="~/assets/js/parallax.min.js"></script>
<script src="~/assets/js/slick.min.js"></script>
<script src="~/assets/js/jquery.validate.min.js"></script>
<script src="~/assets/js/jquery.modal.min.js"></script>
<script src="~/assets/js/bootstrap-drawer.min.js"></script>
<script src="~/assets/js/jquery.countdown.min.js"></script>
<script src="~/assets/js/main.min.js"></script>
