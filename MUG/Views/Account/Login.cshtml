@model MUG.Models.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="login-page">
        <div class="form">
            <div class="image">
                <div class="decor">
                    <h1><span style="background-color: #292929">Welcome to MUG!</span></h1>
                    <p><span style="background-color: #292929">Log in to order coffee</span></p>
                </div>
                <img src="~/img/login.jpg" alt="">
            </div>
            <div class="login">
                <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                    <div class="validation" >
                        <h1>Log in</h1>
                        <div>
                            <input type="text" placeholder="Username" asp-for="UserName">
                            <span asp-validation-for="UserName" style="color: #ff0000"></span>
                        </div>
                        <div>
                            <input type="text" placeholder="Password" asp-for="Password">
                            <span asp-validation-for="Password" style="color: #ff0000"></span>
                        </div>
                        <input type="submit" value="Log in">
                        <a asp-action="Register" asp-controller="Account">Don't have an account?</a>
                    </div>

                </form>

            </div>
        </div>
</div>